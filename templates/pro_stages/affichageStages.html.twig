{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% for Unstage in stage %}
    <h1>Cette page affichera le descriptif du stage ayant pour identifiant {{ Unstage.id }}   </h1>
    <h2>{{Unstage.intitule}}</h2>
    <table>
        <tr><td>Mission:</td><td><p>{{Unstage.mission}}</p></td></tr>
        <tr><td>Adresse:</td><td>{{Unstage.adresseMail}}</td></tr>
        <tr><td>Entreprise:</td><td>{{Unstage.entreprise.nom}}</td></tr>
        <tr><td>Formation:</td><td>        {% for formationCourante in Unstage.formation %}
                                              {{ formationCourante.nom }}{% if loop.last == false %},{% endif %}
                                            {% endfor %}</td></td></tr>
    </table>
    {% endfor %}
</div>
{% endblock %}
