{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Cette page affichera le descriptif du stage ayant pour identifiant {{idStage}}   </h1>
    <h2>{{stage.intitule}}</h2>
    <table>
        <tr><td>Mission:</td><td><p>{{stage.mission}}</p></td></tr>
        <tr><td>Adresse:</td><td>{{stage.adresse}}</td></tr>
        <tr><td>Entreprise:</td><td>{{stage.entreprise}}</td></tr>
        <tr><td>Formation:</td><td>{{stage.formation}}</td></tr>
    </table>
</div>
{% endblock %}
